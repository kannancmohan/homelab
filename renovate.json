{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "baseBranches": [
        "main"
    ],
    "enabledManagers": [
        "helmv3",
        "dockerfile",
        "kubernetes",
        "helm-values",
        "terraform"
    ],
    "helmv3": {
        "fileMatch": ["(^|/)Chart\\.ya?ml$"]
    },
    "helm-values": {
        "fileMatch": ["(^|/)values\\.ya?ml$"]
    },
    "dockerfile": {
        "fileMatch": ["(^|/)Dockerfile$"]
    },
    "kubernetes": {
        "fileMatch": [
            "(^|/)deployment\\.ya?ml$",
            "(^|/)service\\.ya?ml$",
            "(^|/)configmap\\.ya?ml$",
            "(^|/)secret\\.ya?ml$"
        ]
    },
    "terraform": {
        "fileMatch": ["\\.tf$"],
        "pinDigests": false
    },
    "timezone": "Europe/Berlin",
    "schedule": ["Runs at 11:30 AM"]
  }
  