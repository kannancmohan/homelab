{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "baseBranches": [
        "main"
    ],
    "enabledManagers": [
        "helmv3",
        "dockerfile",
        "kubernetes"
    ],
    "helmv3": {
        "fileMatch": ["(^|/)Chart\\.ya?ml$"],
        "commitMessageTopic": "helm chart {{depName}} tp {{newVersion}}"
    },
    "dockerfile": {
        "fileMatch": ["(^|/)Dockerfile$"]
    },
    "kubernetes": {
        "fileMatch": [
            "(^|/)deployment\\.ya?ml$",
            "(^|/)service\\.ya?ml$",
            "(^|/)configmap\\.ya?ml$",
            "(^|/)secret\\.ya?ml$"
        ],
        "ignorePaths": ["templates/"]
    }
  }
  